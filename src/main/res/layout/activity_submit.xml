<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:text="..."/>

        <RelativeLayout
            android:id="@+id/summaryContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/baseTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/baseTV1A"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-75dp"
                android:paddingLeft="16dp"
                android:text="Base" />

                <TextView
                    android:id="@+id/baseTV1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="75dp"
                    android:paddingLeft="24dp"
                    android:text="..." />

            <TextView
                android:id="@+id/balmTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/balmTV1A"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-145dp"
                android:paddingLeft="16dp"
                android:text="Balm" />

                <TextView
                    android:id="@+id/balmTV1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="145dp"
                    android:paddingLeft="24dp"
                    android:text="..." />

            <TextView
                android:id="@+id/glossTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="192dp"
                android:paddingLeft="16dp"
                android:text="Gloss" />

                <TextView
                    android:id="@+id/glossTV1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/glossTV1"
                    android:paddingLeft="24dp"
                    android:text="..." />

        </RelativeLayout>

        <TextView
            android:id="@+id/orderSummaryCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:text="..."/>

    </LinearLayout>


</ScrollView>