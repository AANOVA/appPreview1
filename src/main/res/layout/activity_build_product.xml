            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/pepp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infusionOptions4"/>

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/peppP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_alignParentRight="true"
                    android:text="XX.XX"/>
            </RelativeLayout>




        </LinearLayout>
        <Button
            android:id="@+id/create_order_summary_button"
            android:layout_below="@id/list_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/accentuate"
            android:onClick="orderSummary"
            />
    </LinearLayout>
</ScrollView>