                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <CheckBox
                    android:id="@+id/vanilla"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
